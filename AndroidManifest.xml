<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ecctm.networkwidget"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="10" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <!-- //ConfigureActivity -->
        <activity 
            android:name=".ConfigureActivity"
            android:label="@string/activity_configure_title" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>
        
        <!-- //WidgetReciever -->
        <receiver
            android:name=".NetworkWidgetProvider"
            android:icon="@drawable/ic_launcher"
            android:label="@string/title_widget_networkwidget"
            android:permission="android.permission.READ_PHONE_STATE" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.ecctm.networkwidget.WIDGET_CLOCK_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info" />
        </receiver>
        
        <!-- //UpdateWidgetService -->
        <service android:name=".UpdateWidgetService" />
        
    </application>

</manifest>
