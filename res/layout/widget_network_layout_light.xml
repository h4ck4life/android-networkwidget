<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_network_layout_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="8dip"
    android:background="@drawable/appwidget_bg"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="100" >
    
<LinearLayout
        android:id="@+id/widget_network_layout_network_logo_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="70"
        android:gravity="center" >

        <ImageView
            android:id="@+id/widget_network_layout_network_logo"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:contentDescription="@string/widget_network_layout_network_logo_desc"
            android:gravity="center"
            android:src="@drawable/image_mobile" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_network_layout_network_title_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="30"
        android:gravity="center" >

        <TextView
            android:id="@+id/widget_network_layout_network_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dip"
            android:gravity="center_horizontal"
            android:text="@string/widget_network_layout_network_title_default"
            android:textColor="#000000" />
    </LinearLayout>

</LinearLayout>